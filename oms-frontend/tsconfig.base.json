{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@oms-frontend/auth": ["libs/auth/auth-feature/src/index.ts"],
      "@oms-frontend/auth-data-access": [
        "libs/auth/auth-data-access/src/index.ts"
      ],
      "@oms-frontend/api/auth-data-access": [
        "libs/openapi/auth-data-access/src/index.ts"
      ],

      "@oms-frontend/basket": ["libs/basket/basket-feature/src/index.ts"],
      "@oms-frontend/basket-data-access": [
        "libs/basket/basket-data-access/src/index.ts"
      ],
      "@oms-frontend/api/basket-data-access": [
        "libs/openapi/basket-data-access/src/index.ts"
      ],

      "@oms-frontend/customer": ["libs/customer/customer-feature/src/index.ts"],
      "@oms-frontend/customer-data-access": [
        "libs/customer/customer-data-access/src/index.ts"
      ],
      "@oms-frontend/api/customer-data-access": [
        "libs/openapi/customer-data-access/src/index.ts"
      ],

      "@oms-frontend/order": ["libs/order/order-feature/src/index.ts"],
      "@oms-frontend/order-data-access": [
        "libs/order/order-data-access/src/index.ts"
      ],
      "@oms-frontend/api/order-data-access": [
        "libs/openapi/order-data-access/src/index.ts"
      ],

      "@oms-frontend/product": ["libs/product/product-feature/src/index.ts"],
      "@oms-frontend/product-data-access": [
        "libs/product/product-data-access/src/index.ts"
      ],
      "@oms-frontend/api/product-data-access": [
        "libs/openapi/product-data-access/src/index.ts"
      ],

      "@oms-frontend/shared": ["libs/shared/src/index.ts"],
      "@oms-frontend/models": ["libs/models/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
