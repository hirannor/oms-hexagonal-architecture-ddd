<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="hirannor" id="create_tables::product:ddl:1.0.0">
        <createTable tableName="ec_product">
            <column name="ID" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="product_id" type="UUID">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT"/>
            <column name="price_amount" type="DECIMAL(19,2)">
                <constraints nullable="false"/>
            </column>
            <column name="price_currency" type="VARCHAR(3)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createSequence sequenceName="PRODUCT_SEQ" incrementBy="5" startValue="100"/>

    </changeSet>

</databaseChangeLog>
