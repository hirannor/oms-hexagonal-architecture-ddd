<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <!-- ========================================================= -->
    <!-- ORDERS TABLE -->
    <!-- ========================================================= -->
    <changeSet author="hirannor" id="create_tables::orders:ddl:1.0.0">
        <createTable tableName="EC_ORDERS">
            <column name="ID" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="ORDER_ID" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="CUSTOMER_ID" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="STATUS" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_AT" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createSequence sequenceName="order_seq"
                        startValue="1"
                        incrementBy="5"/>
    </changeSet>

    <!-- ========================================================= -->
    <!-- ORDERED PRODUCTS TABLE -->
    <!-- ========================================================= -->
    <changeSet author="hirannor" id="create_tables::ordered_products:ddl:1.0.0">
        <createTable tableName="EC_ORDERED_PRODUCTS">
            <column name="ID" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="ORDER_ID" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="PRODUCT_ID" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="QUANTITY" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="PRICE_AMOUNT" type="DECIMAL(19,2)">
                <constraints nullable="false"/>
            </column>
            <column name="PRICE_CURRENCY" type="VARCHAR(3)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createSequence sequenceName="ordered_product_seq"
                        startValue="1"
                        incrementBy="5"/>

        <addForeignKeyConstraint
                baseTableName="EC_ORDERED_PRODUCTS"
                baseColumnNames="ORDER_ID"
                referencedTableName="EC_ORDERS"
                referencedColumnNames="ID"
                constraintName="fk_ordered_products_order"/>
    </changeSet>

</databaseChangeLog>
